{{!-- <section class="container"> --}}

  <section class="container mt-4">
    <div class="container profile mt-5">
      <div class="row justify-content-center">
        <div class="col-6 d-flex justify-content-space-between">
          
          <img src="{{user.profile_image_filename}}" class="img-thumbnail rounded-circle " style="width:30%"
            alt="profile pic placeholder"
            id="uploadClicker">
            <div class="form-group">
            {{#compare session.user_id user.id operator="=="}}
            <input type="file" id="toUploadImage" accept="image/*" name="image" />
            </div>
            {{/compare}}
            

          <div class="col-8 ml-5">
            <h1 class="user-name">{{user.username}}</h1>
            <div class="d-flex justify-content-between mt-4 mb-5">
              <p>520 posts</p>
              <p>755 followers</p>
              <p>270 following</p>
            </div>
          </div>
        </div>
      </div>

      <section class="container">
        {{#unless isUser}}
        <buttton id="follow-btn" type="button" class="btn btn-outline-info btn-md bg-none">
          <span class="btn-label">
          {{#if hasRelationship}}
          <i class="fa fa-minus"></i> UNFOLLOW
          {{else}}
          <i class="fa fa-plus"></i> FOLLOW
          {{/if}}
          </span>
        </buttton>
        {{/unless}}
      </section>
      <section class="flex-row justify-center">
        {{#each user.posts}}
        {{> indivpost-details}}
        {{/each}}
      </section>
  </section>
  <div id="pageId" style="display:none">{{pageId}}</div>

  <div id="userIdStorage" style="display:none">{{user.id}}</div>

  <script src="/js/follow.js"></script>
  <script src="/js/profile.js"></script>
