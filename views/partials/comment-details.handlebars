{{!-- full list of comparers is here: https://gist.github.com/doginthehat/1890659/2a3c5a269fb2282cc9ce7526bb99f93d5559ac65 --}}
<div class="card border-0">
  <div id="normalComment" class="card-body">
    <div class="card-title">
      <a href="/user/{{commentUser.id}}">
      <h4>
        <img src="{{commentUser.profile_image_filename}}" class="img-thumbnail border-0 rounded-circle " style="width:5%"
              alt="profile pic placeholder">{{commentUser.username}}
      </h4>
      </a>
    </div>
    <div clas="card-text">
      <h5><div id="actualComment">{{body_text}}</div></h5>
      {{#compare parent.session.user_id this.commentUser.id operator="=="}}
      <button id="delete-comment" class="btn btn-outline-danger" type="button" data-id="{{id}}" post-id="{{parent.post.id}}"><i class="fa fa-trash"></i></button>
      {{/compare}}
    </div>
  </div>
</div>
<hr>

