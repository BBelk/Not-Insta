<section class="mr-1 p-1 card" style="width:20rem;">
  <div class="card-body">
    <div class="card-title">
      <a href="/user/{{id}}">
        <img
            src="{{profile_image_filename}}"
            class="img-thumbnail border-0 rounded-circle"
            style="width:30%"
            alt="profile pic placeholder"/>
        <h5>{{username}}</h5>
      </a>
    </div>
  </div>
</section>